<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | StudyShare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #ADB5BD; }
    .card { margin-bottom: 20px; transition: transform 0.2s, box-shadow 0.2s; }
    .card:hover { transform: translateY(-5px); box-shadow: 0 8px 20px rgba(0,0,0,0.15); }
    .friend-material { border-left: 4px solid #212529; }
    .alert-custom { margin-bottom: 20px; }
    .fade-in-card { opacity: 0; transform: translateY(20px); animation: fadeInUp 0.5s forwards; }
    @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">StudyShare</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/materials/new">Add Material</a></li>
          <li class="nav-item"><a class="nav-link" href="/friends">Friends</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4 text-center">Dashboard</h1>

    <!-- Friend Messages / Errors -->
    <% if(typeof friendMessage !== 'undefined' && friendMessage) { %>
      <div class="alert alert-success alert-custom text-center"><%= friendMessage %></div>
    <% } %>
    <% if(typeof friendError !== 'undefined' && friendError) { %>
      <div class="alert alert-danger alert-custom text-center"><%= friendError %></div>
    <% } %>

    <!-- Friends' Materials -->
    <h3 class="mb-3">Friends' Materials</h3>
    <% if(!friendsMaterials || friendsMaterials.length === 0) { %>
      <p class="text-muted">No materials from friends yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        <% friendsMaterials.forEach((mat, index) => { %>
          <div class="col">
            <div class="card h-100 shadow-sm friend-material fade-in-card" style="animation-delay:<%= index*0.1 %>s">
              <div class="card-body">
                <h5 class="card-title"><%= mat.title %></h5>
                <p class="card-text"><%= mat.description %></p>
                <% if(mat.fileUrl) { %>
                  <a href="<%= mat.fileUrl %>" target="_blank" class="btn btn-dark btn-sm">View File</a>
                <% } else { %>
                  <span class="text-muted">No file uploaded</span>
                <% } %>
                <% if(mat.author && mat.author.username) { %>
                  <p class="text-muted mt-2">By: <%= mat.author.username %></p>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Your Materials -->
    <h3 class="mb-3">Your Materials</h3>
    <% if(!yourMaterials || yourMaterials.length === 0) { %>
      <p class="text-muted">You haven't uploaded any materials yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% yourMaterials.forEach((mat, index) => { %>
          <div class="col">
            <div class="card h-100 shadow-sm fade-in-card" style="animation-delay:<%= index*0.1 %>s">
              <div class="card-body">
                <h5 class="card-title"><%= mat.title %></h5>
                <p class="card-text"><%= mat.description %></p>
                <% if(mat.fileUrl) { %>
                  <a href="<%= mat.fileUrl %>" target="_blank" class="btn btn-dark btn-sm">View File</a>
                <% } else { %>
                  <span class="text-muted">No file uploaded</span>
                <% } %>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/materials/<%= mat._id %>/edit" class="btn btn-success btn-sm">Edit</a>
                <form action="/materials/<%= mat._id %>?_method=DELETE" method="POST" class="m-0">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <footer class="bg-secondary text-white py-3 mt-5">
    <div class="container text-center">
      &copy; <%= new Date().getFullYear() %> StudyShare. All rights reserved.
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
