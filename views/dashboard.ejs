<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | StudyShare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      background-color: #1E1E2F;
      overflow-x: hidden;
      font-family: Arial, sans-serif;
    }

    /* Constellation Background */
    #constellationCanvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      background: linear-gradient(to bottom, #1E1E2F, #111121);
    }

    .card {
      margin-bottom: 20px;
      transition: transform 0.2s, box-shadow 0.2s;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      background-color: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255,255,255,0.2);
      color: #fff;
      z-index: 1;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.3);
    }

    .friend-material { border-left: 4px solid #FFCA28; }

    .alert-custom { margin-bottom: 20px; }

    .fade-in-card { opacity: 0; transform: translateY(20px); animation: fadeInUp 0.5s forwards; }
    @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }

    h1, h3, p, li {
      color: #fff;
    }

    .btn-dark {
      background-color: #343A40;
      border: none;
    }

    .btn-dark:hover {
      background-color: #212529;
    }

    .btn-success {
      background-color: #28a745;
      border: none;
    }

    .btn-success:hover {
      background-color: #1e7e34;
    }

    footer {
      background-color: #343A40;
      color: #fff;
      padding: 15px 0;
      text-align: center;
      z-index: 1;
      position: relative;
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <!-- Constellation Background -->
  <canvas id="constellationCanvas"></canvas>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">StudyShare</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/materials/new">Add Material</a></li>
          <li class="nav-item"><a class="nav-link" href="/friends">Friends</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5" style="position: relative; z-index:1;">
    <h1 class="mb-4 text-center">Dashboard</h1>

    <% if(typeof friendMessage !== 'undefined' && friendMessage) { %>
      <div class="alert alert-success alert-custom text-center"><%= friendMessage %></div>
    <% } %>
    <% if(typeof friendError !== 'undefined' && friendError) { %>
      <div class="alert alert-danger alert-custom text-center"><%= friendError %></div>
    <% } %>

    <!-- Friends' Materials -->
    <h3 class="mb-3">Friends' Materials</h3>
    <% if(!friendsMaterials || friendsMaterials.length === 0) { %>
      <p class="text-muted">No materials from friends yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        <% friendsMaterials.forEach((mat, index) => { %>
          <div class="col">
            <div class="card h-100 friend-material fade-in-card" style="animation-delay:<%= index*0.1 %>s">
              <div class="card-body">
                <h5 class="card-title"><%= mat.title %></h5>
                <p class="card-text"><%= mat.description %></p>
                <% if(mat.fileUrl) { %>
                  <a href="<%= mat.fileUrl %>" target="_blank" class="btn btn-dark btn-sm">View File</a>
                <% } else { %>
                  <span class="text-muted">No file uploaded</span>
                <% } %>
                <% if(mat.author && mat.author.username) { %>
                  <p class="text-light mt-2">By: <%= mat.author.username %></p>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Your Materials -->
    <h3 class="mb-3">Your Materials</h3>
    <% if(!yourMaterials || yourMaterials.length === 0) { %>
      <p class="text-muted">You haven't uploaded any materials yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% yourMaterials.forEach((mat, index) => { %>
          <div class="col">
            <div class="card h-100 fade-in-card" style="animation-delay:<%= index*0.1 %>s">
              <div class="card-body">
                <h5 class="card-title"><%= mat.title %></h5>
                <p class="card-text"><%= mat.description %></p>
                <% if(mat.fileUrl) { %>
                  <a href="<%= mat.fileUrl %>" target="_blank" class="btn btn-dark btn-sm">View File</a>
                <% } else { %>
                  <span class="text-muted">No file uploaded</span>
                <% } %>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/materials/<%= mat._id %>/edit" class="btn btn-success btn-sm">Edit</a>
                <form action="/materials/<%= mat._id %>?_method=DELETE" method="POST" class="m-0">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <footer>
    &copy; <%= new Date().getFullYear() %> StudyShare. All rights reserved.
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Constellation background for Dashboard
    const canvas = document.getElementById('constellationCanvas');
    const ctx = canvas.getContext('2d');
    let width, height, particles;

    function resizeCanvas() {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
    }

    function createParticles() {
      particles = [];
      const total = 80;
      for(let i=0;i<total;i++){
        particles.push({
          x: Math.random()*width,
          y: Math.random()*height,
          vx: (Math.random()-0.5)*0.4,
          vy: (Math.random()-0.5)*0.4,
          radius: Math.random()*2 + 1
        });
      }
    }

    function drawParticles(){
      ctx.clearRect(0,0,width,height);
      for(let p of particles){
        ctx.beginPath();
        ctx.arc(p.x,p.y,p.radius,0,Math.PI*2);
        ctx.fillStyle="#FFCA28";
        ctx.fill();
      }

      for(let i=0;i<particles.length;i++){
        for(let j=i+1;j<particles.length;j++){
          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const dist = Math.sqrt(dx*dx + dy*dy);
          if(dist<120){
            ctx.strokeStyle = "rgba(255,202,40," + (1-dist/120)*0.3 + ")";
            ctx.lineWidth = 0.5;
            ctx.beginPath();
            ctx.moveTo(particles[i].x, particles[i].y);
            ctx.lineTo(particles[j].x, particles[j].y);
            ctx.stroke();
          }
        }
      }
      updateParticles();
      requestAnimationFrame(drawParticles);
    }

    function updateParticles(){
      for(let p of particles){
        p.x += p.vx;
        p.y += p.vy;
        if(p.x<0 || p.x>width) p.vx*=-1;
        if(p.y<0 || p.y>height) p.vy*=-1;

        // subtle attraction to center
        const dx = width/2 - p.x;
        const dy = height/2 - p.y;
        const dist = Math.sqrt(dx*dx + dy*dy);
        if(dist<300){
          p.vx += dx/8000;
          p.vy += dy/8000;
        }
      }
    }

    window.addEventListener('resize', ()=>{
      resizeCanvas();
      createParticles();
    });

    resizeCanvas();
    createParticles();
    drawParticles();
  </script>
</body>
</html>
