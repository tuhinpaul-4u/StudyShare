<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Friends | StudyShare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">StudyShare</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/materials">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4 text-center">Manage Friends</h1>
    
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% users.forEach(u => { %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
              <span><%= u.username %></span>
              <% if(user.friends.includes(u._id)) { %>
              <form action="/friends/remove/<%= u._id %>" method="POST" class="d-inline">
              <button class="btn btn-danger btn-sm">Remove</button>
              </form>
              <% } else { %>
              <form action="/friends/add/<%= u._id %>" method="POST" class="d-inline">
                <button class="btn btn-primary btn-sm">Add Friend</button>
              </form>
              <% } %>
          </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <footer class="bg-dark text-white py-3 mt-5">
    <div class="container text-center">
      &copy; <%= new Date().getFullYear() %> StudyShare. All rights reserved.
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
