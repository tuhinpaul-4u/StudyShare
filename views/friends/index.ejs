<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Friends | StudyShare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Ensure card content wraps nicely and username truncates */
    .card-body {
      padding: 0.75rem 1rem;
    }

    .card-body .username {
      flex-grow: 1;
      min-width: 0; /* Needed for text-truncate to work inside flex */
    }

    .card-body .username span {
      display: inline-block;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    /* Hide buttons on very small screens and center username */
    @media (max-width: 436px) {
      .friend-action-btn {
        display: none !important; /* Hide the button/form */
      }

      .card-body {
        justify-content: center !important; /* Center the username */
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">StudyShare</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/materials">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Friends List -->
  <div class="container my-5">
    <h1 class="mb-4 text-center">Manage Friends</h1>
    
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% users.forEach(u => { %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body d-flex flex-wrap justify-content-between align-items-center">
              <!-- Username -->
              <div class="username me-2">
                <span><%= u.username %></span>
              </div>

              <!-- Remove/Add button -->
              <% if(user.friends.includes(u._id)) { %>
                <form action="/friends/remove/<%= u._id %>" method="POST" class="d-inline-flex m-0 friend-action-btn">
                  <button class="btn btn-danger btn-sm">Remove</button>
                </form>
              <% } else { %>
                <form action="/friends/add/<%= u._id %>" method="POST" class="d-inline-flex m-0 friend-action-btn">
                  <button class="btn btn-primary btn-sm">Add Friend</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-3 mt-5">
    <div class="container text-center">
      &copy; <%= new Date().getFullYear() %> StudyShare. All rights reserved.
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
