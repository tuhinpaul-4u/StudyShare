<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StudyShare | Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
  <style>
    /* Preloader styling */
    #preloader {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: #ADB5BD;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      z-index: 9999;
    }

    .loader-logo {
      font-size: 3rem;
      display: flex;
      align-items: center;
      gap: 10px;
      animation: bounce 1.5s infinite;
    }

    .loader-logo i {
      color: #212529;
      font-size: 3.5rem;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }

    /* Main content hidden initially */
    #main-content {
      display: none;
    }

    /* Hero Section */
    .hero {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      background: linear-gradient(to right, #343A40, #000000);
      color: white;
      padding: 50px 20px;
    }

    .hero h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .hero p {
      font-size: 1.2rem;
      margin-bottom: 30px;
    }

    .btn-cta {
      font-size: 1.1rem;
      padding: 10px 30px;
    }

    /* Smooth fade-in for main content */
    .fade-in {
      animation: fadeIn 1s forwards;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
  </style>
</head>
<body>
  <!-- Preloader -->
  <div id="preloader">
    <div class="loader-logo">
      <i class="fas fa-user-graduate"></i>
      <span>StudyShare</span>
    </div>
    <p class="mt-3">Loading...</p>
  </div>

  <!-- Main Content -->
  <div id="main-content">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">StudyShare</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero fade-in">
      <h1><i class="fas fa-user-graduate"></i> StudyShare</h1>
      <p>Your platform to share and learn study materials with friends seamlessly.</p>
      <a href="<%= user ? '/dashboard' : '/login' %>" class="btn btn-light btn-cta">Get Started</a>

    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-3 mt-5 text-center">
      &copy; <%= new Date().getFullYear() %> StudyShare. All rights reserved.
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Preloader hide and show main content
    window.addEventListener("load", () => {
      const preloader = document.getElementById("preloader");
      const mainContent = document.getElementById("main-content");

      preloader.style.display = "none";
      mainContent.style.display = "block";
    });
  </script>
</body>
</html>
