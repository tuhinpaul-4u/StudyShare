<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | StudyShare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .card { margin-bottom: 20px; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">StudyShare</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/materials/new">Add Material</a></li>
          <li class="nav-item"><a class="nav-link" href="/friends">Friends</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Dashboard -->
  <div class="container my-5">
    <h1 class="mb-4 text-center">Study Materials</h1>

    <% if(materials.length === 0) { %>
      <p class="text-center text-muted">No materials available yet.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% materials.forEach(mat => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= mat.title %></h5>
                <p class="card-text"><%= mat.description %></p>
                <p class="text-muted">By: <%= mat.author.username %></p>
                <% if(mat.fileUrl) { %>
                  <a href="<%= mat.fileUrl %>" target="_blank" class="btn btn-primary btn-sm">View File</a>
                <% } %>
              </div>
              <% if(user._id.toString() === mat.author._id.toString()) { %>
                <div class="card-footer d-flex justify-content-between">
                  <a href="/materials/<%= mat._id %>/edit" class="btn btn-success btn-sm">Edit</a>
                  <form action="/materials/<%= mat._id %>?_method=DELETE" method="POST" class="m-0">
                    <button class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <footer class="bg-dark text-white py-3 mt-5">
    <div class="container text-center">
      &copy; <%= new Date().getFullYear() %> StudyShare. All rights reserved.
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
